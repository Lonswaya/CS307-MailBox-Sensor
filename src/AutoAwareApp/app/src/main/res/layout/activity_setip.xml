<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginBottom="20dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set_ip_tag"
        android:text="Server ip :"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        />
    
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/set_ip_tag"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:hint=" Enter server's ip address"
        android:textColorHint="#7d7d7d"
        android:background="@drawable/edittext_bg"
        android:id="@+id/server_ip_text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_ip_tag"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="130dp"
        android:text="Set IP"
        android:textSize="18dp"
        android:id="@+id/set_ip_button" />


</RelativeLayout>