<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_form">

        <RelativeLayout android:id="@+id/sensor_info_form" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

            <TextView
                android:id="@+id/sensor_name"
                android:padding="5dp"
                android:textSize="25dp"
                android:text="@string/sensor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/sensor_type_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:padding="5dp"
                android:layout_marginLeft="35dp"
                android:layout_toRightOf="@id/sensor_name"
                />

            <ImageButton
                android:id="@+id/rec_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:padding="5dp"
                android:layout_marginLeft="100dp"
                android:layout_toRightOf="@id/sensor_type_image"
                />

            <SeekBar
                android:id="@+id/current_val_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sensor_name"
                />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button1_string"
                android:textSize="10dp"
                android:padding="5dp"
                android:layout_below="@id/current_val_bar"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="160dp"
                />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button2_string"
                android:textSize="10dp"
                android:padding="5dp"
                android:layout_toRightOf="@id/button1"
                android:layout_marginTop="86dp"
                android:layout_marginLeft="10dp"
                />

        </RelativeLayout>
    </ScrollView>
 </LinearLayout>